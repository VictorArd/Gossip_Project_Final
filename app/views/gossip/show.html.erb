<br>

<div class="container">
  <div class="row">
    <% @comments.each do |comment| %>
  <div class="card w-75 mx-auto shadow bg-light" style="max-width: 100rem;">
    <h5 class="card-header"><%= User.find(comment.user_id).first_name %> <%= User.find(comment.user_id).last_name %></h5>
    <div class="card-body">
      <p class="card-text"><%= comment.content %></p>
      <p class="card-text"><%= comment.id %></p>
      <hr width="90%" color=white>
    <p class="card-link d-inline text-"><%= link_to "Editer", edit_comment_path(comment.id), :class => "text-info"%></p>
    <p class="card-link d-inline"><%= link_to "Supprimer", comment_path(comment.id), :class => "text-danger", data: { confirm: "Etes-vous sur de vouloir supprimer le commentaire ?", method: 'DELETE' }%></p>
    </div>
  </div>
  <% end %>
</div>
